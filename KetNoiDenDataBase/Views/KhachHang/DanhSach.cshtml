@model IEnumerable<KetNoiDenDataBase.Models.KHACHANG>

@{
    ViewBag.Title = "DanhSach";
}

<div >
    <h2>Danh sách khách hàng</h2>
    <p>
        @Html.ActionLink("Create New", "Them")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TENKH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SODT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIACHI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIOITINH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TENANH)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TENKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SODT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIACHI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GIOITINH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TENANH)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Sua", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Xoa", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>