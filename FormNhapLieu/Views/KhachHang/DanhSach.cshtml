@model IEnumerable<FormNhapLieu.Models.KhachHang>

@{
    ViewBag.Title = "Danh Sách Khách Hàng";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style=" margin-top:100px;">
        <div class="col-md-12">
            <h3>Danh sách khách hàng</h3>
            <a class="btn btn-success" style="margin:20px" href="~/khachhang/themmoi">Thêm mới</a>
        </div>
    <table class="table table-bordered" >
        <tr>
            <th>
                Tên Khách Hàng
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Hình ảnh
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    <img src="@item.TenAnh" style="width:100px;height:150px"/>
                </td>
                <td>
                    <a href="~/KhachHang/capnhat?id=@item.Id">Edit</a>|
                    <a onclick="xoaKH(@item.Id)" href="#">Delete</a>

                </td>
            </tr>
        }

    </table>
</div>

<script>
    var xoaKH = function (idkh) {
        if (confirm("Bạn có muốn xóa hay không")) {
            location.href = "/khachhang/xoa?idkh=" + idkh
        }
    }
</script>